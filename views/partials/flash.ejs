<%if(success && success.length){%>
    <div class="alert alert-success alert-dismissible fade show mt-2" style="margin-top:30px;position: absolute;left:4px;top:20vh;z-index: +1;" role="alert">
        <%=success%>
    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
    

<%}%>

<%if(error && error.length){%>
    <div class="alert alert-danger alert-dismissible fade show mt-2" style="margin-top:30px;position: absolute;left: 4px;top:20vh;z-index: +1;" role="alert">
        <%=error%>
    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
<%}%>