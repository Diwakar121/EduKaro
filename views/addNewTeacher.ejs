<%- include("./partials/header")%>
<%- include("./partials/navbar")%>



<div class="container" style="margin-top:5rem;width:80vw;margin-bottom: 18rem;">
           
            <form class="validated-form" action="/addNewTeacher" method="POST" style="max-width:70%;margin:10px auto" novalidate>
                <%- include("./partials/flash")%>
                <h4 class="display-4">New Teacher register</h4>
                <div class="mb-3">
                  <label for="username" class="form-label">Username</label>
                  <input type="text" class="form-control" id="username" placeholder=" Unique UserID Of Teacher" name="username" required>
                  <div class="valid-feedback">
                    Looks good!
                  </div>
                </div>
                <div class="mb-3">
                  <label for="email" class="form-label">Email</label>
                  <input type="email" class="form-control" id="email" placeholder="Email" name="email" required>
                  <div class="valid-feedback">
                    Looks good!
                  </div>
                </div>
                <div class="mb-3">
                    <label for="password" class="form-label">Password</label>
                    <input type="password" class="form-control" id="password" placeholder="Password" name="password" required>
                    <div class="valid-feedback">
                      Looks good!
                    </div>
                  </div>
                  
                  <div class="mb-3">
                    <label for="class" class="form-label">Teacher employee no.</label>
                    <input type="text" class="form-control" id="rollno" placeholder="Employee No." name="rollno" required>
                    <div class="valid-feedback">
                      Looks good!
                    </div>
                  </div>
                  <div class="mb-3">
                    <label for="class" class="form-label">Mobile No.</label>
                    <input type="text" class="form-control" id="mobile" placeholder="mobile" name="mobile" required>
                    <div class="valid-feedback">
                      Looks good!
                    </div>
                  </div>
                  <div class="mb-3">
                    <label for="email" class="form-label">Admin Secret</label>
                    <input type="password" class="form-control" id="secret" placeholder="Secret code" name="secret" required>
                    <div class="valid-feedback">
                      Looks good!
                    </div>
                  </div>

               
                <button type="submit" class="btn btn-success">Register</button>
              </form>
        
   
</div>


<%- include("./partials/footer")%>