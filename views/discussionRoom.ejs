<%- include("partials/header")%>

<%- include("partials/navbar")%>
<link rel="stylesheet" href="/css/index.css" >
<script src="/socket.io/socket.io.min.js"></script>
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/emojionearea/3.4.2/emojionearea.css">


<style>
    li{
        padding: 16px;
        box-shadow: 0px 1px 2px gray;
        border-radius: 5px;
        margin:10px;
        letter-spacing: 0.1em;
    }
    ul{
        list-style: none;
    }   
</style>



<div class="container mb-3" style="margin-top:10vh;min-height:90vh;">
    <h3 class="display-3 "><%=subject.name%> - Discussion Room</h3>

    <div class="row mt-4">
        <div class="roomName" id='<%=subject._id %>'>
        <div class="col-md-8 name"  id="<%=currentUser.username%>">
             <button id="enterBtn" class="btn btn-info">Enter Discussion Room</button>  
        </div>
        
        <div class="col-md-8 mb-3" id="chat">
            <div class="input-group mb-3">  
                <textarea id="inp" class="form-control" cols="30" rows="2"></textarea>
            </div>
            <button class="btn btn-success" id="send-btn">Send</button>
            
            <div class="mt-3">
                <ul id="list"></ul>
            </div>
            
        </div>
    </div>
      
</div>

</div>


<script src="https://cdnjs.cloudflare.com/ajax/libs/emojionearea/3.4.2/emojionearea.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.9.2/dist/umd/popper.min.js" integrity="sha384-IQsoLXl5PILFhosVNubq5LC7Qb9DXgDA9i+tQ8Zj3iwWAwPtgFTxbJ8NT4GN1R8p" crossorigin="anonymous"></script>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0/dist/js/bootstrap.min.js" integrity="sha384-lpyLfhYuitXl2zRZ5Bn2fqnhNAKOAaM/0Kr9laMspuaMiZfGmfwRNFh8HlMy49eQ" crossorigin="anonymous"></script>
<script src="/js/discussionroom.js"></script>
<script>
    $('#inp').emojioneArea({
        pickerPosition:'bottom',
        hideSource: true
    })
</script>
    
<%- include("partials/footer")%>

   